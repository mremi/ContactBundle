<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="mremi_contact_form" pattern="/contact">
        <default key="_controller">mremi_contact.contact_controller:indexAction</default>
    </route>

    <route id="mremi_contact_confirmation" pattern="/contact/confirmation">
        <default key="_controller">mremi_contact.contact_controller:confirmAction</default>
        <requirement key="_method">GET</requirement>
    </route>
</routes>
